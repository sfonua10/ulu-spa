<svg width="1200" height="800" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="familyBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#F0E8D8;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E5D9C8;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="familyAccent" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#B89752;stop-opacity:0.3" />
      <stop offset="50%" style="stop-color:#C4A668;stop-opacity:0.4" />
      <stop offset="100%" style="stop-color:#B89752;stop-opacity:0.3" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="1200" height="800" fill="url(#familyBg)"/>

  <!-- Decorative elements - warm, welcoming -->
  <circle cx="200" cy="180" r="85" fill="url(#familyAccent)" opacity="0.25"/>
  <circle cx="1000" cy="620" r="100" fill="url(#familyAccent)" opacity="0.2"/>
  <circle cx="800" cy="200" r="65" fill="url(#familyAccent)" opacity="0.2"/>
  <circle cx="400" cy="600" r="75" fill="url(#familyAccent)" opacity="0.22"/>

  <!-- Icon representation - family of different sizes -->
  <g transform="translate(600, 350)">
    <circle cx="0" cy="0" r="75" fill="none" stroke="#B89752" stroke-width="3" opacity="0.6"/>

    <!-- Different sized circles for multi-generational -->
    <circle cx="-40" cy="-15" r="16" fill="#8B886E" opacity="0.75"/>
    <circle cx="-10" cy="-18" r="13" fill="#8B886E" opacity="0.7"/>
    <circle cx="20" cy="-15" r="10" fill="#8B886E" opacity="0.65"/>
    <circle cx="45" cy="-12" r="8" fill="#8B886E" opacity="0.6"/>

    <!-- Bodies -->
    <ellipse cx="-40" cy="8" rx="14" ry="20" fill="#8B886E" opacity="0.55"/>
    <ellipse cx="-10" cy="8" rx="12" ry="18" fill="#8B886E" opacity="0.5"/>
    <ellipse cx="20" cy="8" rx="9" ry="14" fill="#8B886E" opacity="0.45"/>
    <ellipse cx="45" cy="8" rx="7" ry="11" fill="#8B886E" opacity="0.4"/>
  </g>

  <!-- Placeholder text -->
  <text x="600" y="550" font-family="sans-serif" font-size="32" fill="#8B886E" text-anchor="middle" opacity="0.6">
    Family Bonding
  </text>
  <text x="600" y="590" font-family="sans-serif" font-size="18" fill="#8B886E" text-anchor="middle" opacity="0.5">
    Replace with lifestyle photography
  </text>
</svg>
